generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Room {
  id           String         @id @default(cuid())
  code         String         @unique
  passcodeHash String?
  createdAt    DateTime       @default(now())
  items        PlaylistItem[]
  messages     Message[]
}

model PlaylistItem {
  id           String   @id @default(cuid())
  roomId       String
  url          String
  title        String
  thumbnailUrl String?
  addedBy      String
  position     Int
  createdAt    DateTime @default(now())
  room         Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@index([roomId])
}

model Message {
  id        String   @id @default(cuid())
  roomId    String
  author    String
  text      String
  createdAt DateTime @default(now())
  room      Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@index([roomId])
}
